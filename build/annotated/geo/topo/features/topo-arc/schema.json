{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Arc Feature with geometry by reference",
  "allOf": [
    {
      "$ref": "../topo-feature/schema.json"
    },
    {
      "properties": {
        "topology": {
          "allOf": [
            {
              "$ref": "../../datatypes/topology/schema.json"
            },
            {
              "properties": {
                "type": {
                  "type": "string",
                  "const": "ArcWithCenter"
                },
                "references": {
                  "minItems": 3,
                  "maxItems": 3
                }
              }
            }
          ]
        }
      },
      "required": [
        "topology"
      ]
    }
  ]
}